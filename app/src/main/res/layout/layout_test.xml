<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="#666666"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="52px"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="41"
                android:textColor="#333333"
                android:textSize="60px"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元"
                android:textColor="#333333"
                android:textSize="28px"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20px">

            <View
                android:layout_width="100px"
                android:layout_height="1px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#e5e5e5"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="车费详情"
                android:textColor="#888888"
                android:textSize="24px" />

            <View
                android:layout_width="100px"
                android:layout_height="1px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#e5e5e5"></View>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="起步价"
                android:textColor="#666666"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="30元"
                android:textColor="#666666"
                android:textSize="28px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="超里程费"
                android:textColor="#666666"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="30元"
                android:textColor="#666666"
                android:textSize="28px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="超时间费"
                android:textColor="#666666"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="30元"
                android:textColor="#666666"
                android:textSize="28px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="车主减免"
                android:textColor="#FA8919"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="-15元"
                android:textColor="#FA8919"
                android:textSize="28px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="试驾券抵扣"
                android:textColor="#FA8919"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="-15元"
                android:textColor="#FA8919"
                android:textSize="28px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="余额抵扣"
                android:textColor="#FA8919"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="-15元"
                android:textColor="#FA8919"
                android:textSize="28px" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52px">

            <View
                android:layout_width="100px"
                android:layout_height="1px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#e5e5e5"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="购车券"
                android:textColor="#888888"
                android:textSize="24px" />

            <View
                android:layout_width="100px"
                android:layout_height="1px"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="#e5e5e5"></View>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="532px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="52px">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="36px"
                android:layout_height="36px"
                android:layout_centerVertical="true"
                android:src="@drawable/payment_tickets_selected"
                app:layout_auto_basewidth="height" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"
                android:layout_toRightOf="@+id/iv1"
                android:text="1000元奔驰GLA购车券"
                android:textColor="#666666"
                android:textSize="28px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0元"
                android:textColor="#666666"
                android:textSize="28px" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="590px"
            android:layout_height="106px"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24px"
            android:background="@drawable/payment_tickets_bg">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="28px"
                android:layout_height="48px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32px"
                android:src="@drawable/payment_tickets_icon"
                app:layout_auto_basewidth="height" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24px"
                android:layout_toRightOf="@id/iv2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="勾选后，半年内购买此车即可获得1000元返现。"
                    android:textColor="#FA8919"
                    android:textSize="20px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16px"
                    android:text="查看兑换规则"
                    android:textColor="#FA8919"
                    android:textSize="20px" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>